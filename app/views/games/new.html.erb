<h1 class="text-center my-4"><strong>New game</strong></h1>

<div class="container text-center">
  <div class="row justify-content-center">
   <% @letters.each do |letter| %>
      <div class="col-auto mb-3">
        <button class="btn btn-primary btn-lg p-4"><%=letter%></button>
      </div>
   <% end %>
  </div>
  <div>
        <form action="score" method="post" data-turbo="false" class="form-control">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token  %>
          <%= hidden_field_tag :letters, @letters.join(' ') %>
          <input type="text" name="word" placeholder="Enter your word">
          <input type="submit" value="Play">
        </form>
  </div>
</div>
